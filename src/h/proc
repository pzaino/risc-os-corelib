#ifdef __CC_NORCROFT
#pragma include_only_once
#endif

#include "common.h"

#ifdef __cplusplus
extern "C" {
#endif

int os_getpid(void);
int os_getppid(void);
int os_system(const char *command);
int os_fork(void);
int os_start_task(const char *cmd);
int os_execvp(const char *file, char *const argv[]);

#ifdef __cplusplus
}
#endif

#endif /* __LIBOS_PROC_H__ */
